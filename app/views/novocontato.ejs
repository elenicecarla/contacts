<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Cadastro de Clientes</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/mystyle.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="cadastro">


        <form action="/salvar" class="form-horizontal" id="form-contato" method="POST">

            <legend>Dados do contato</legend>

            <div class="form-group">
                <label class="col-md-2" for="name">CPF</label>
                <div class="col-md-9">
                    <input class="form-control" name="cpf" id="cpf" type="text" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2" for="name">Nome</label>
                <div class="col-md-9">
                    <input class="form-control" name="nome" id="nome" type="text" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2" for="sexo">Sexo</label>
                <div class="col-md-9">
                    <select class="form-control" name="sexo" id="sexo" required>
                              <option value="0" style="display:none;">Selecione uma opção...</option>
                                <option value="masculino">Masculino</option>
                                <option value="feminino">Feminino</option>
                                </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2" for="celular">Celular</label>
                <div class="col-md-9">
                    <input class="form-control" name="telefone" id="telefone" type="text" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2" for="email">Email</label>
                <div class="col-md-9">
                    <input class="form-control" name="email" id="email" type="text" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2" for="endereco">Endereço</label>
                <div class="col-md-9">
                    <input class="form-control" name="endereco" id="endereco" type="text" />
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-md-2" for="bairro">Bairro</label>
                <div class="col-md-9">
                    <input class="form-control" name="bairro" id="bairro" type="text" />
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-md-2" for="cidade">Cidade</label>
                <div class="col-md-9">
                    <input class="form-control" name="cidade" id="cidade" type="text" />
                </div>
            </div>

            </fieldset>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <form action="/"><button class="btn btn-danger" id="cancel" type="reset" >Cancelar</button></form>

        </form>
    </div>

</body>

</html>